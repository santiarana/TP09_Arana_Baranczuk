<div class="container text-center">   
        <div class="row align-items-start">
            @{
                foreach(Telas item in @ViewBag.ListaTelas)
                {
                <div class="col">
                
                    <div class="card Carta">
                        <img src="@item.FotoTelas" class="card-img-top" alt="...">
                    <div class="card-body">
                        <div class="card-title">@item.Nombre</div>
                        <div class="col">
                            <a href='@Url.Action("Color", new {Telas=@Telas.Color})'>
                                Ver color 
                            </a>
                        </div>
                        </div>
                    </div>
                    </div>
                }
                <a class="btn btn-lg, boton" href='@Url.Action("AgregarTela","Home", new{IdTela=@ViewBag.Telas.IdTela})' role="button">Agregar Tela</a>
            }
        </div>
</div>