<div class="jumbotron jumbotron-fluid colores align-middle">
  <div class="container">
    <form method="post" action = '@Url.Action("GuardarProducto","Home")' enctype="multipart/form-data">
  <div class="form-group">
    <input type="hidden" id="IdProducto" name="IdProducto" value=@ViewBag.IdProducto>
    <label class="formulario" for="exampleInputEmail1">Nombre</label>
    <input  type="text" id="NombreProducto" name="NombreProducto" placeholder="Nombre" required>
  </div>
  <div class="form-group">
    <input type="hidden" id="IdProducto" name="IdProducto" value=@ViewBag.IdProducto>
    <label class="formulario" for="exampleInputEmail1">Foto</label>
    <input type="file" id="File" name="File" required>
  </div>
  <div class="form-group">
    <input type="hidden" id="IdProducto" name="IdProducto" value=@ViewBag.IdProducto>
    <label class="formulario" for="exampleInputEmail1">Tela</label>
    <input type="text" id="NombreTela" name="NombreTela" required>
  </div>
  <div class="form-group">
    <input type="hidden" id="IdProducto" name="IdProducto" value=@ViewBag.IdProducto>
    <label class="formulario" for="exampleInputEmail1">Color</label>
    <input type="text" id="NombreColor" name="NombreColor"  required>
  </div>
  <div class="form-group">
    <input type="hidden" id="IdProducto" name="IdProducto" value=@ViewBag.IdProducto>
    <label class="formulario" for="exampleInputEmail1">Fecha de ingreso</label>
    <input type="date" id="FechaDeIngreso" name="FechaDeIngreso" required>
  </div>
  <div class="form-group">
    <input type="hidden" id="IdProducto" name="IdProducto" value=@ViewBag.IdProducto>
    <label class="formulario" for="exampleInputEmail1">Cantidad disponible</label>
    <input type="number" id="CantidadDisponible" name="CantidadDisponible" required>
  </div>
  <div class="form-group">
    <input type="hidden" id="IdProducto" name="IdProducto" value=@ViewBag.IdProducto>
    <label class="formulario" for="exampleInputEmail1">Peso</label>
    <input type="number" id="Peso" name="Peso" required>
  </div>
  <button type="submit" class="btn btn-primary m-4">Agregar</button>
</form>
  </div>
</div>
