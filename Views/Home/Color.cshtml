<div class="container text-center">   
        <div class="row align-items-start">
            @{
                foreach(Color item in @ViewBag.ListaColores)
                {
                <div class="col-3 cartas">
                
                    <div class="card Carta">
                        <img src="@item.FotoColor" class="card-img-top carta">
                    <div class="card-body">
                        <div class="card-title">@item.NombreColor</div>
                        <div class="col">
                            <a href='@Url.Action("VerDetalleProducto", new {IdColor=item.IdColor})'>
                                Ver Productos 
                            </a>
                        </div>
                        </div>
                    </div>
                    </div>
                }
                
            }
        </div>
</div>